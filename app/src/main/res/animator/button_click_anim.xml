<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <set>
            <objectAnimator
                android:propertyName="translationZ"
                android:duration="100"
                android:valueTo="8dp"/>
            <objectAnimator
                android:propertyName="elevation"
                android:duration="100"
                android:valueTo="8dp"/>
        </set>
    </item>
    <item>
        <set>
            <objectAnimator
                android:propertyName="translationZ"
                android:duration="100"
                android:valueTo="0dp"/>
            <objectAnimator
                android:propertyName="elevation"
                android:duration="100"
                android:valueTo="0dp"/>
        </set>
    </item>
</selector>
