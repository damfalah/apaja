<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg4"
    tools:context=".CalculatorActivity">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Calculator"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="36dp"
        android:layout_marginBottom="15dp"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="bold" />

    <EditText
        android:layout_below="@+id/textViewTitle"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:id="@+id/angka_pertama"
        android:hint="Masukkan angka ke 1"
        android:paddingLeft="20dp"
        android:backgroundTint="#FFFFFF"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColor="#000000"
        android:textSize="16sp"
        android:fontFamily="sans-serif"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp" />

    <EditText
        android:layout_below="@+id/angka_pertama"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:id="@+id/angka_kedua"
        android:hint="Masukkan angka ke 2"
        android:paddingLeft="20dp"
        android:backgroundTint="#FFFFFF"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColor="#000000"
        android:textSize="16sp"
        android:fontFamily="sans-serif"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/tambah"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/angka_kedua"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="15dp"
        android:gravity="center"
        android:text="+"
        android:textSize="20dp"
        android:layout_alignParentLeft="true"
        android:textColor="@color/putih"

        android:background="@drawable/button_shape"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/kurang"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/angka_kedua"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="20dp"
        android:text="-"
        android:textSize="20dp"
        android:textColor="@color/putih"

        android:background="@drawable/button_shape"
        android:layout_toRightOf="@+id/tambah"
        android:layout_toEndOf="@+id/tambah" />

    <Button
        android:id="@+id/kali"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/angka_kedua"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="20dp"
        android:text="*"
        android:textSize="20dp"
        android:textColor="@color/putih"

        android:background="@drawable/button_shape"
        android:layout_toRightOf="@+id/kurang"
        android:layout_toEndOf="@+id/kurang" />

    <Button
        android:id="@+id/bagi"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/angka_kedua"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="20dp"
        android:text="/"
        android:textSize="20dp"
        android:textColor="@color/putih"

        android:background="@drawable/button_shape"
        android:layout_toRightOf="@+id/kali"
        android:layout_toEndOf="@+id/kali" />

    <Button
        android:id="@+id/bersihkan"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tambah"
        android:layout_marginTop="16dp"
        android:text="Clear"
        android:textColor="#000000"
        android:background="@drawable/button_shape_white"
        android:fontFamily="sans-serif-condensed"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/hasil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bersihkan"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Result"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hasil"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="0"
        android:textSize="36sp" />

</RelativeLayout>